rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura solo a usuarios autenticados en su propia colección
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth.uid == uid;
    }
    
    // Permitir lectura pública de ejercicios compartidos (opcional)
    match /ejercicios_compartidos/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}